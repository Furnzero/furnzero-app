---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import BaseHead from "./BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = {
	activeLink: string;
};

const { activeLink } = Astro.props;
---

<!doctype html>
<html lang="en">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<body>
		<Header activeLink={activeLink} />
		<main>
			<slot />
		</main>
		<Footer />

		<!-- Scroll Top -->
		<a
			href="#"
			id="scroll-top"
			class="scroll-top d-flex align-items-center justify-content-center"
			><i class="bi bi-arrow-up-short"></i></a
		>

		<!-- Preloader -->
		<div id="preloader"></div>

		<!-- Vendor JS Files -->
		<script is:inline src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"
		></script>
		<script is:inline src="/assets/vendor/php-email-form/validate.js"></script>
		<script is:inline src="/assets/vendor/aos/aos.js"></script>
		<script is:inline src="/assets/vendor/glightbox/js/glightbox.min.js"
		></script>

		<!-- Main JS File -->
		<script is:inline src="/assets/js/main.js"></script>
	</body>
</html>

<style>
	main {
		min-height: 80vh;
	}
</style>
