---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "../components/Layout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, heroImage } = Astro.props;
---

<Layout activeLink="blog">
	<div class="container">
		<article>
			<h1>{title}</h1>
			<p class="description">{description}</p>
      <span class="date">
        <FormattedDate date={pubDate} />

      </span>
			<div class="hero-image">
				{heroImage && <img src={heroImage} alt="" />}
			</div>
			<div class="content">
				<slot />
			</div>
		</article>
	</div>

	<style is:global>
		article {
			margin-top: 40px;
		}
    
    .description {
      font-size: 1.3rem;
    }

		.hero-image {
			aspect-ratio: 16 / 9;
			width: 100%;
		}
		.hero-image img {
			display: block;
			margin: 0 auto;
			width: 100%;
			box-shadow: var(--box-shadow);
      object-fit: cover;
      height: 100%;
		}
		.date {
      display: block;
			margin-bottom: 1em;
			color: rgb(var(--gray));
		}

    .content  {
      padding: 0 0 5rem;
    }

		.content p {
			width: 100%;
			font-size: 1.3rem;
		}

    .content h2 {
      font-size: 2.5rem;
      margin: 1em 0;
    }

    .content h3 {
      font-size: 2rem;
      margin: 1em 0;
    }

    .content hr {
      margin: 1em 0;
    }

		.content-img {
			width: 100%;
			height: 500px;
			object-fit: cover;
		}
	</style>
</Layout>
